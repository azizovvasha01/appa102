@model FrontToBackSqlConnection.Models.Student

<h2>Delete Student</h2>

<h5 class="mt-3">Are you sure you want to delete this?</h5>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Surname</dt>
            <dd class="col-sm-10">@Model.Surname</dd>

            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@Model.Age</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>